{
  "name": "morning-briefing-desktop",
  "version": "10.0.0",
  "description": "桌面新闻小组件 - Electron 版",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "web": "node server.js",
    "dev": "electron .",
    "build": "electron-builder --mac",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.openclaw.newswidget",
    "productName": "NewsWidget",
    "mac": {
      "category": "public.app-category.news",
      "icon": "NewsWidget.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "files": [
      "electron-main.js",
      "backend/**/*",
      "renderer/**/*",
      "NewsWidget.icns",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "electron",
    "news",
    "desktop",
    "widget"
  ],
  "author": "OpenClaw AI Assistant",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.7.0",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "cheerio": "^1.2.0"
  }
}
